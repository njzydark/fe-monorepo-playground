{
  "name": "infra-tools",
  "version": "0.0.1",
  "description": "infra tools for monorepo packages",
  "private": true,
  "engines": {
    "node": ">= 18.12.0"
  },
  "bin": {
    "rslib": "./bin/rslib.js",
    "rsbuild": "./bin/rsbuild.js",
    "rstest": "./bin/rstest.js"
  },
  "exports": {
    "./rslib": {
      "import": "./dist/rslib.mjs",
      "require": "./dist/rslib.js",
      "types": "./types/rslib/index.d.ts"
    },
    "./rsbuild": {
      "import": "./dist/rsbuild.mjs",
      "require": "./dist/rsbuild.js",
      "types": "./types/rsbuild/index.d.ts"
    },
    "./rstest": {
      "import": "./dist/rstest.mjs",
      "require": "./dist/rstest.js",
      "types": "./types/rstest/index.d.ts"
    }
  },
  "scripts": {
    "build": "RSLIB_DTS=true rslib build",
    "build:nonedts": "RSLIB_DTS=false rslib build",
    "dev": "RSLIB_DTS=true rslib build -w",
    "prepublishOnly": "npm run build",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --fix --ext .ts,.tsx",
    "prettier": "prettier --write src",
    "postinstall": "npm run build"
  },
  "dependencies": {
    "@rsbuild/core": "1.6.2",
    "@rsbuild/plugin-less": "1.5.0",
    "@rsbuild/plugin-react": "1.4.1",
    "@rsbuild/plugin-source-build": "1.0.3",
    "@rsbuild/plugin-svgr": "1.2.2",
    "@rslib/core": "0.17.1",
    "@rstest/core": "0.6.2",
    "@tailwindcss/postcss": "^4.1.16",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "chokidar": "4.0.3",
    "commander": "^14.0.2",
    "glob": "^11.0.3",
    "happy-dom": "20.0.10",
    "jsdom": "27.1.0",
    "less": "^4.4.2",
    "postcss": "8.5.6",
    "postcss-less": "^6.0.0",
    "rsbuild-plugin-devtools-json": "^0.2.5",
    "typescript": "catalog:"
  }
}
